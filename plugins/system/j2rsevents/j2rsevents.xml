<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>J2store Rsevents plugin</name>
	<author>Alagesan</author>
	<creationDate>JUN 2016</creationDate>
	<copyright>(C) 2016 http://j2store.org</copyright>
	<license>GNU General Public License v3 or later versions</license>
	<authorEmail>support@j2store.org</authorEmail>
	<authorUrl>www.j2store.org</authorUrl>
	<version>1.2</version>
	<description>System plugin that integrates RSEvents Pro with J2Store. If you disable this plugin,
	events in the RS Events will not be treated as products.</description>
	<files>
		<filename plugin="j2rsevents">j2rsevents.php</filename>
		<filename>index.html</filename>
		<folder>fields</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.plg_system_j2rsevents.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="show_options" type="radio"
					   description="PLG_SYSTEM_J2RSEVENT_SHOW_OPTIONS_DESC"
					   label="PLG_SYSTEM_J2RSEVENT_SHOW_OPTIONS"
					   class="btn-group"
					   default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
